	<build>
		<finalName>${project.artifactId}</finalName>
		<resources>
			<resource>
				<targetPath>${project.build.directory}/${project.build.finalName}/</targetPath>
				<directory>src/main/webapp</directory>
			</resource>
			<resource>
				<targetPath>${project.build.directory}/${project.build.finalName}/workflow/init/module</targetPath>
				<directory>src/main/webapp/horizon/init/module</directory>
			</resource>
			<resource>
				<targetPath>${project.build.directory}/${project.build.finalName}/WEB-INF</targetPath>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/workflow-conf/**</include>
					<include>**/language-lib/**</include>
				</includes>
			</resource>			
			<resource>
				<targetPath>${project.build.directory}/classes</targetPath>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/logback.xml</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<!-- jar包包含时间戳的问题 -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.6</version>
				<configuration>
				    <archiveClasses>false</archiveClasses>
					<archive>
					   <manifest>
					      <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
					    </manifest>	
						 <manifestEntries>
					         <Timestamp>${maven.build.timestamp}-7.4.13</Timestamp>
					    </manifestEntries>
					</archive>
					<webResources>
						<webResource>
							<directory>src/main/resources</directory>
							<targetPath>WEB-INF</targetPath>
							<includes>
								<include>**/workflow-conf/**</include>
								<include>**/language-lib/**</include>
							</includes>
						</webResource>
					</webResources>
					<failOnMissingWebXml>false</failOnMissingWebXml>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>sysdeo-tomcat-maven-plugin</artifactId>
				<version>1.1</version>
			</plugin>
		</plugins>
